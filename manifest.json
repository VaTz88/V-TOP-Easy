{
    "manifest_version": 2,
    "name": "V-TOP Easy",
    "version": "0.1.0",
    "description": "Better experience with using VIT student login.",
    "author": "Vatsal Joshi",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "V-TOP Easy"
    },
    "content_scripts": [
        {
            "css": [
                "materialize.min.css",
                "stud_login/stud_login_style.css"
            ],
            "js": [
                "jquery-3.1.0.min.js",
                "materialize.min.js",
                "stud_login/stud_login_script.js"
            ],
            "matches": [
                "*://vtop.vit.ac.in/student/stud_login.asp"
            ],
            "all_frames": true
        },
        {
            "css": [
                "materialize.min.css",
                "stud_home/stud_home_style.css"
            ],
            "js": [
                "jquery-3.1.0.min.js",
                "materialize.min.js",
                "stud_home/stud_home_script.js"
            ],
            "matches": [
                "*://vtop.vit.ac.in/student/stud_home.asp"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "stud_login/stud_login.html"
    ]//,
    // "-ms-preload": {
    //     "backgroundScript": "backgroundScriptsAPIBridge.js",
    //     "contentScript": "contentScriptsAPIBridge.js"
    // }
    //for edge compatiblity
}